<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aiden.stock.user.domain.dao.mapper.GroupMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.aiden.stock.user.domain.dao.entity.Group">
        <id column="id" property="id" />
        <result column="name" property="name" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name
    </sql>
    <select id="queryGroupStock" resultType="com.aiden.stock.user.dto.GroupStockResp">
        SELECT a.id,b.stock_code
        FROM `user_group` a
            inner join user_group_stock b on a.id = b.group_id
        where 1=1
        <if test="groupId != null">
            and a.id = #{groupId}
        </if>
        <if test="groupName != null and groupName != ''">
            and a.name = #{groupName}
        </if>
    </select>

</mapper>
